# Production Environment Variables for AWS Deployment
# Copy this file to .env.production and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://chainbill_user:YOUR_DB_PASSWORD@your-rds-endpoint:5432/chainbill
DATABASE_HOST=your-rds-endpoint.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=chainbill
DATABASE_USER=chainbill_user
DATABASE_PASSWORD=YOUR_DB_PASSWORD

# MongoDB Configuration (Atlas recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chainbill?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-min-32-characters
JWT_EXPIRATION=7d

# Blockchain Configuration
APTOS_PRIVATE_KEY=0x04fa7024f8877de01aa137c92a5ea662e7544d44620fd53bd2b051d150d8c0d0
APTOS_CONTRACT_ADDRESS=0x04fa7024f8877de01aa137c92a5ea662e7544d44620fd53bd2b051d150d8c0d0
APTOS_NETWORK=devnet

# Payment Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AI Configuration
OPENAI_API_KEY=sk-your_openai_api_key

# Application Configuration
NODE_ENV=production
PORT=5000
FRONTEND_PORT=3000
CORS_ORIGIN=https://your-domain.com

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_SECRET_KEY

# Redis Configuration (ElastiCache in production)
REDIS_URL=redis://your-elasticache-endpoint:6379

# File Storage Configuration
AWS_S3_BUCKET=chainbill-files
AWS_S3_REGION=us-east-1

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-min-32-characters