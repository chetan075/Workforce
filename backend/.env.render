# ChainBill Production Environment for Render Deployment
# Copy these values to Render's Environment Variables section

# Database Configuration (PostgreSQL from Render)
DATABASE_URL="postgresql://username:password@host:port/database"

# MongoDB Configuration (from MongoDB Atlas)
MONGODB_URL="mongodb+srv://username:password@cluster.mongodb.net/chainbill?retryWrites=true&w=majority"

# Application Configuration
NODE_ENV=production
PORT=10000

# JWT & Security (Generate secure secrets)
JWT_SECRET="YOUR_SECURE_64_CHARACTER_JWT_SECRET_HERE"
SESSION_SECRET="YOUR_SECURE_64_CHARACTER_SESSION_SECRET_HERE"

# Frontend Configuration (Will be auto-filled by Render)
FRONTEND_URL="https://chainbill-frontend.onrender.com"
CORS_ORIGIN="https://chainbill-frontend.onrender.com"

# Aptos Blockchain Configuration
APTOS_NETWORK=devnet
APTOS_NODE_URL=https://fullnode.devnet.aptoslabs.com/v1
APTOS_PRIVATE_KEY="YOUR_APTOS_PRIVATE_KEY_HERE"
APTOS_CONTRACT_ADDRESS="0x04fa7024f8877de01aa137c92a5ea662e7544d44620fd53bd2b051d150d8c0d0"
APTOS_STRICT=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR="/tmp/uploads"

# Third-party Services (Optional)
STRIPE_SECRET="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# IPFS/Pinata (Optional)
PINATA_API_KEY="your_pinata_api_key"
PINATA_API_SECRET="your_pinata_secret"
IPFS_CID_PREFIX="pinata"

# AI Services (Optional)
GEMINI_API_KEY="your_gemini_api_key"
GEMINI_API_URL="https://generativelanguage.googleapis.com/v1beta/models"
GEMINI_MODEL="gemini-1.5-pro"

# Security & Rate Limiting
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE="/tmp/app.log"

# Health Check
HEALTH_CHECK_ENABLED=true